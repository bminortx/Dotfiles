# sidebar

set mime_forward=yes
set mime_forward_rest=yes

set editor="/usr/bin/emacsclient"

# standard
set from="cjk@wwwtech.de"
set realname="Christian Kruse"


# multiple accounts
alternates "(ckruse@gmail\.com)|(cjk@wwwtech\.de)|(ckruse@wwwtech\.de)|(c\.kruse@mwbenson\.de)|(c\.kruse@termitel\.de)|(c\.kruse@spar-mit\.com)"

set use_from
set reverse_name
set reverse_realname=no

set sort=threads
set sort_aux=reverse-date

set charset="utf-8"
set locale="de_DE.UTF-8"

set send_charset="us-ascii:iso-8859-15:utf-8"

unset mark_old

set delete=yes
set include=yes
set fast_reply=yes
set beep=no
set markers=no
set confirmappend=no

set mail_check=300
set check_new
set timeout=15
set move=no
set copy=yes
set edit_headers
#unset config_charset
set date_format = "%d/%m/%y %H:%M"

set alias_file=~/.mutt/aliases
set query_command="lbdbq %s"

set mbox_type=Maildir
set folder=$HOME/Mail
set spoolfile="+/WWWTech/WWWTech"

mailboxes =WWWTech/WWWTech =WWWTech/WWWTech.Lists.swisschaos =WWWTech/WWWTech.Lists.chaostreff =Termitel/Termitel =Termitel/Termitel.server =Termitel/Termitel.System.Cron =Termitel/Termitel.System.Nagios =Sparmit/Sparmit "=marix-search"

# Mairix search:
macro index,pager "S" "<shell-escape>mairix " "run a Mairix search"
macro index,pager "<Esc>s" "<change-folder-readonly>=mairix-search\n" "switch to mairix results folder"
macro index,pager "<Esc>w" "<change-folder>=WWWTech/WWWTech\n" "back to inbox"
macro index,pager "<Esc>t" "<change-folder>=Termitel/Termitel\n" "back to inbox"


folder-hook WWWTech 'set pgp_autosign postponed="+WWWTech/WWWTech.Drafts" record="+WWWTech/WWWTech.Sent Messages"'
folder-hook WWWTech 'set from="Christian Kruse <cjk@wwwtech.de>" signature="~/.signature-wwwtech"'
folder-hook WWWTech 'set sendmail="~/.mail/msmtp-enqueue.sh -a WWWTech"'
folder-hook WWWTech 'macro index,pager a "s=WWWTech/WWWTech.Archiv<enter>"'
folder-hook WWWTech 'my_hdr Reply-To: cjk@wwwtech.de'

folder-hook WWWTech/WWWTech.Lists.raif-intern 'set from="Christian Kruse <cjk+raifintern@wwwtech.de>"'
folder-hook WWWTech/WWWTech.Lists.chaostreff 'set from="Christian Kruse <cjk+chaostreff@wwwtech.de>"'
folder-hook WWWTech/WWWTech.Lists.swisschaos 'set from="Christian Kruse <cjk+chaostreff@wwwtech.de>"'

folder-hook Termitel 'set postponed="+Termitel/Termitel.Drafts" record="+Termitel/Termitel.Sent Messages"'
folder-hook Termitel 'set from="Christian Kruse <c.kruse@spar-mit.com>" signature="~/.signature-termitel"'
folder-hook Termitel 'set sendmail="~/.mail/msmtp-enqueue.sh -a Termitel"'
folder-hook Termitel 'macro index,pager a "s=Termitel/Termitel.Archiv<enter>"'
folder-hook Termitel 'my_hdr Reply-To: c.kruse@spar-mit.com'

set folder_format = "[%2C] %t %N %f" # %> Last modified: %-13d"
set index_format='%4C %?X?A& ? %Z %d %-20.20F %?M?-->%3M&(%4l)? %s'
set sort_browser=unsorted

set reply_regexp="^((\
[Rr][Eeé]?[  ]?:[ \t ]*|\
Re\\[[0-9]+\\]:|\
Re\\([0-9]+\\):|\
Re\\^[0-9]+:|\
AW:|\
SV:|\
Ad:|\
Odp:|\
Obj\\.? ?:|\
Re&nbsp;:|\
Antw(ort)?:|\
R[eé]f\\. :|\
Rép\\. :|\
R[eé]p\\.?:|\
F[Ww][Dd]? ?:|\
T[Rr] ?:|\
Trans\\. :\
)[ \t ]*)+"

set sort_re


## Pager ##
#

# Stop at the end of a message
set pager_stop

# Always show n line of the pager
set pager_index_lines=20

# Preserve context (ala slrn) of multi-paged messages
set pager_context = 1

# Show ~ sign like Vi
set tilde

source ~/.mutt/colors
source ~/.mutt/gpg

ignore *
unignore from date subject to cc list-id
unignore organization organisation x-mailer: x-newsreader: x-mailing-list:
unignore posted-to:

# eof
